<%= flash[ :notice] %>
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <% @books.each do |book| %>
   <tr>
    <td>
      <%= book.title %>
    </td>
    <td>
      <%= book.body %>
    </td>
    <td>
      <%= link_to "Show", book_path(book.id) %>
    </td>
    <td>
      <%= link_to "Edit", edit_book_path(book.id) %>
    </td>
    <td>
      <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
    </td>
    <% end %>
   </tr>
  </tbody>
</table>
<h2>New Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, local:true do |book| %>
 <div>
   <div>Title</div>
   <div>
     <%= book.text_field :title %>
   </div>
 </div>
 <div>
   <div>Body</div>
   <div>
     <%= book.text_area :body %>
   </div>
 </div>
 <div>
     <%= book.submit 'Create Book' %>
 </div>
<% end %>